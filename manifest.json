{
  "manifest_version": 3,
  "name": "Shorts Limiter",
  "version": "1.2",
  "description": "Контролируйте время, проводимое в YouTube Shorts с синхронизацией",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications",
    "windows",
    "scripting"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "http://localhost:8080/*",
    "http://localhost:44044/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "auth/auth.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [{
    "resources": ["auth/auth.html", "popup/popup.html"],
    "matches": ["<all_urls>"]
  }]
}